pipeline {
    agent any 
    environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}
    tools { 
        maven 'maven'
        nodejs '14.17.6'
    }
    stages {
        stage ("Clean up"){
            steps {
                deleteDir()
            }
        }
        stage ("Clone repo"){
            steps {
                bat "git clone https://kakachiSensei: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@github.com/kakachiSensei/astonvilla-app.git"
            }
        }
        stage ("Generate docker image") {
            steps {
                 dir("astonvilla-app"){
                    bat "docker build -t kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER} ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla-app"){
                    bat "docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW "
                    bat "docker push kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
        stage ("Clone GitOps Repo"){
            steps {
                bat "git clone https://kakachiSensei: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@github.com/kakachiSensei/k8s-manifests.git"
            }
        }
        stage ("Update Manifests") {
            steps {
                 dir("k8s-manifests/astonvilla-app"){
                    script {
                        bat """
                        powershell -command  "(gc astonvilla-deployment.yaml) -replace 'image: .*', 'image: kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER}' | Out-File -encoding ASCII astonvilla-deployment.yaml"
                        """
                        bat """
                         git add .
                         git commit -m "version updated"
                         git push -u origin master
                        """
                    }
                }                
            }
        }
    }
}
