pipeline {
    agent any 
    stages {
        stage ("Clean up"){
            steps {
                 deleteDir()
            }
        }
        stage ("Generate docker image") {
            steps {
                sh 'docker build -t kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER} .'
            }
        }
        stage ("push docker image") {
            steps {
              sh "docker push kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER}"
            }
        }
    }
}
