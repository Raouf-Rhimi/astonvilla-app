pipeline {
    agent any
    stages {
        stage('Clean workspace') {
            steps {
                sh 'sudo rm -rf /root/.jenkins/workspace/astonvilla/*'
            }
        }
        stage('Clone astonvilla application') {
            steps {
                sh 'git clone https://github.com/Raouf-Rhimi/astonvilla-app.git'
            }
        }
        stage('Build docker image') {
            steps {
                sh 'docker build -t kakachisensei/astonvilla-front:1.0.${env.BUILD_NUMBER} .'
                sh 'docker images'
            }
        }
    }
}
