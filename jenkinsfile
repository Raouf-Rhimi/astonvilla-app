pipeline {
    agent any 
    tools { 
        maven 'maven'
        nodejs '14.17.6'
    }
    stages {
        stage ("Clean up"){
            steps {
                deleteDir()
            }
        }
        stage ("Clone repo"){
            steps {
                bat "git clone https://kakachiSensei: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@github.com/kakachiSensei/astonvilla-app.git"
            }
        }
        stage ("generate docker image") {
            steps {
                 dir("astonvilla-app"){
                    bat "docker build -t kakachisensei/astonvilla-app ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla-app"){
                    bat "docker push kakachisensei/astonvilla-app"
                }                
            }
        }
    }
}
