pipeline {
    agent any 
    environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}
    tools { 
        maven 'maven'
        nodejs '14.17.6'
    }
    stages {
        stage ("Clean up"){
            steps {
                deleteDir()
            }
        }
        stage ("Clone repo"){
            steps {
                bat "git clone https://kakachiSensei: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@github.com/kakachiSensei/astonvilla-app.git"
            }
        }
        stage ("Versioning") {
            steps {
              script {
               dir("astonvilla-app"){
                     bat """
                     git checkout master
                     """     
                     if (fileExists("/kakachiSensei/astonvilla-app/version.txt") {
                        def file = readFile(file: "/kakachiSensei/astonvilla-app/version.txt") 
                        echo "success"
                        }
                     }   
              }
                 }
            }
        }
        stage ("generate docker image") {
            steps {
                 dir("astonvilla-app"){
                    bat "docker build -t kakachisensei/astonvilla-app ."
                }                
            }
        }
        stage ("Login to dockerhub") {
			steps {
				bat "docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW "
			}
		}
        stage ("push docker image") {
            steps {
                 dir("astonvilla-app"){
                    bat "docker push kakachisensei/astonvilla-app"
                }                
            }
        }
    }
}
